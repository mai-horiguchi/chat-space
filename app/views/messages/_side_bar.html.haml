.Side-bar
  .sheader
    .sheader__user
      .sheader__user__name
        = current_user.name
      .sheader__user__icon
      = link_to "groups/new" do
        = icon('fas', 'edit', class: "sheader__user__icon--btn")
      = link_to edit_user_path(current_user) do
        = icon('fas', 'cog', class: "sheader__user__icon--btn")

  .smain
    .glist
      - current_user.groups.each do |group|
        .group
          = link_to '#' do
            .group__name
              = group.name
            .group__message
